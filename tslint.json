{
    "extends": ["tslint-config-airbnb", "tslint-react"],
    "rules": {
        "curly"              : false,
        "import-name"        : false,
        "variable-name"      : false,
        "quotemark"          : [true, "double"],
        "ter-indent"         : [true, 4],
        "max-line-length"    : [true, 160],
        "trailing-comma"     : false,
        "jsx-boolean-value"  : false,
        "jsx-no-multiline-js": false,
        "ter-arrow-parens"   : false,
        "jsx-curly-spacing"  : false
    },
    "tslint": [
        "disable-next-line"
    ]
}
